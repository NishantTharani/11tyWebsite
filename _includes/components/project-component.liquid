{% if tags %}
  {% assign tags_array = tags | split: ',' %}
{% endif %}

<div class="flex flex-col md:flex-row my-4 bg-secondary-light rounded-lg p-4 md:space-x-6">
  <img src="{{img_src}}" alt="" class="w-32 object-contain mr-3">
  <div class="md:space-y-2">
    <h3 class="text-2xl font-semibold text-gray-900">{{ title }}</h3>
    {% if tags %}
      {% render 'components/project-tags-component.liquid', tags: tags_array %}
    {% endif %}
    <p class="text-gray-600 text-sm leading-6">{{ description }}</p>
    <span class="flex">
      {% if github %}
        <a href="{{github}}">
          <img src="/assets/images/icons/github-mark.svg" alt="GitHub Icon" class="h-4 inline">
        </a>
      {% endif %}
      {% if demo %}
        <a href="{{demo}}" class="ml-auto">Demo</a>
      {% endif %}
    </span>
  </div>
</div>
